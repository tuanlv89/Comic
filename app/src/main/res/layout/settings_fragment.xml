<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:background="@color/background_bottom_navigationbar"
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/avatar"
            android:id="@+id/img_avatar_setting"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_username_setting"
            android:textColor="@color/primaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Harry Pháº¡m"
            android:textSize="18sp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_email_setting"
            android:text="levantuan1110@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username_setting"
            android:textColor="@color/primaryTextColor"
            android:layout_marginTop="8dp"
            android:textSize="18sp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/bottom_navigation_selector"
            android:id="@+id/tv_change_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_email_setting"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/img_avatar_setting"
            android:text="Change password" />
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/primaryTextColor" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_about_us_setting"
            android:textSize="18sp"
            android:padding="16dp"
            android:text="About us"
            android:textColor="@color/primaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/primaryTextColor" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_rate_app_setting"
            android:textSize="18sp"
            android:padding="16dp"
            android:text="Rate app"
            android:textColor="@color/primaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/primaryTextColor" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_feed_back_setting"
            android:textSize="18sp"
            android:padding="16dp"
            android:text="Feedback"
            android:textColor="@color/primaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/primaryTextColor" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:padding="16dp"
            android:text="Version"
            android:textColor="@color/primaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:padding="16dp"
            android:text="1.0.0"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/primaryTextColor" />

</LinearLayout>